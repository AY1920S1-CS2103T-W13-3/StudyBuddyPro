<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="cheatsheetTabWindow" styleClass="background" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seedu.address.ui.CheatsheetTabWindowController">
   <center>
      <SplitPane dividerPositions="0.2" maxWidth="0.2">
        <items>
          <AnchorPane>
               <children>
                  <ListView fx:id="tagArea" fixedCellSize="0.0" minWidth="0.0" mouseTransparent="true" styleClass="result-display" stylesheets="@DarkTheme.css" />
               </children>
            </AnchorPane>
          <AnchorPane>
               <children>
                  <TextArea fx:id="cheatsheetArea" editable="false" styleClass="result-display" stylesheets="@DarkTheme.css" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </center>
</BorderPane>
